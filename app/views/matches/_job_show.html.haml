.Max-width
  .Wrapper
    .Job-infomation
      .Title-wrapper
        .Title-wrapper__newinfo
          .Title-wrapper__newinfo--color
            派遣求人
        .Title-wrapper__jobno
          Job No：D200905627D

      .Jobwrapper-info
        .Upper-contents
          .Upper-contents__name
            = match.title
            
      .Pr-contents
        .Pr-title
          ここがポイント！
        .Pr-box
          .Pr-box__text
            = match.pr1
          .Pr-box__text
            = match.pr2
          .Pr-box__text
            = match.pr3

      .Image-contents
        %ul.Job-images
          %li.Job-images__list1
            = image_tag match.image1.url, class: 'Job-images__list1--img' if match.image1.present?
          %li.Job-images__list
            = image_tag match.image2.url, class: 'Job-images__list1--img' if match.image2.present?
          %li.Job-images__list
            = image_tag match.image3.url, class: 'Job-images__list1--img' if match.image3.present?
          %li.Job-images__list
            = image_tag match.image4.url, class: 'Job-images__list1--img' if match.image4.present?
          %li.Job-images__list
            = image_tag match.image5.url, class: 'Job-images__list1--img' if match.image5.present?
      .Vacancy-contents
        %table.Vacancy-infos
          %tr.Vacancy-item
            %td.Vacancy-item__left
              勤務地
            %td.Vacancy-item__right
              = match.description
          %tr.Vacancy-item
            %td.Vacancy-item__left
              給与
            %td.Vacancy-item__right
              = match.salary
          %tr.Vacancy-item
            %td.Vacancy-item__left
              アクセス
            %td.Vacancy-item__right
              = match.access
          %tr.Vacancy-item
            %td.Vacancy-item__left
              勤務時間
            %td.Vacancy-item__right
              = match.time
          %tr.Vacancy-item
            %td.Vacancy-item__left
              曜日・日数
            %td.Vacancy-item__right
              = match.week
          %tr.Vacancy-item
            %td.Vacancy-item__left
              募集人数
            %td.Vacancy-item__right
              = match.emplyee
          %tr.Vacancy-item
            %td.Vacancy-item__left
              契約期間
            %td.Vacancy-item__right
              = match.term
          %tr.Vacancy-item
            %td.Vacancy-item__left
              営業担当
            %td.Vacancy-item__right
              テスト
          %tr.Vacancy-item
            %td.Vacancy-item__left
              都道府県
            %td.Vacancy-item__right
              テスト
        .Question-contents
          .Question-contents__box
            = link_to 'http://www.pikawaka.com', class: "Question-contents__box--btn" do
              チャットで質問する！

    .Review-wrapper
      みんなの口コミ！（会社・仕事）
      .Review-wrapper__title
        - @reviews.each do |review|
          .Review-wrapper__list
            .Review-top
              .Review-icons
                .Reiview-icons__face
                  =image_tag current_user.image.to_s, class: 'Review-icons__face--image'
                .Review-icons__nickname
                  =current_user.nickname
              .Review-time
                =review.updated_at

            .Review-infomation
              .Review-infomation__left
                .Review-infomation__left--good
                【よかった点】
                .Review-infomation__left--text
                  =review.good
                .Review-infomation__left--good
                【わるかった点】
                .Review-infomation__left--text
                  =review.bad
              .Review-infomation__right
                .Review-infomation__right--destroy
                  = link_to job_review_path(review.job.id, review.id), method: :delete do
                    =icon('far','trash-alt', class: 'Review-infomation__right--trash')

    .Review-wrapper__up
      = image_tag 'image.png', class: 'Review-wrapper__up--image'
    .Review-wrapper__review
      感想を教えて！
    
    =form_with model: [match, review], html: {class: ""}, local: true do |form|
      .Review-wrapper__form
        .Review-post
          .Review-box
            .Review-box__good
              【よかった点】
            = form.text_area :good, maxlength: 250, class: 'Review-box__text', placeholder: 'ここに文章を入力してください'
            .Review-box__bad
              【わるかった点】
            = form.text_area :bad, maxlength: 250, class: 'Review-box__text', placeholder: 'ここに文章を入力してください'
      .Review-button
        = form.submit '投稿する', class: 'Review-button__submit'
  .Review-wrapper
    .Review-wrapper__title
      みんなの口コミ
    .Review-wrapper__list
      .Review-infomation
        .Review-infomation__left
          .Review-infomation__left--good
          【よかった点】
          .Review-infomation__left--text
          つつつつううううううううううううううううううう
          .Review-infomation__left--good
          【わるかった点】
          .Review-infomation__left--text
          えええええええええええええええええええええええ
        .Review-infomation__right
          = link_to 'http://www.pikawaka.com', class: "Review-infomation__right--edit" do
            編集
          = link_to 'http://www.pikawaka.com', class: ".Review-infomation__right--destroy" do
            削除
    .Review-wrapper__up
      = image_tag 'image.png', class: 'Review-wrapper__up--image'
    .Review-wrapper__title
      感想を教えて！
    = form_with model: [@matche, @review] , html: {class: "Review-wrapper__form"}, local: true do |form|
      .Review-box
        .Review-box__good
          【よかった点】
        = form.text_area :good, maxlength: 250, class: 'Review-box__text', placeholder: 'ここに文章を入力してください'
        .Review-box__bad
          【わるかった点】
        = form.text_area :bad, maxlength: 250, class: 'Review-box__text', placeholder: 'ここに文章を入力してください'
      .Review-button
        = form.submit 'レビュー'